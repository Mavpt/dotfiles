# ------System Control------ 
super + shift +	s
	prompt "Are you sure you would like to shutdown?" "shutdown"

super + shift +	r
	prompt "Are you sure you would like to reboot?" "reboot"

# ------BSPWM & SXHKD------ 
# Quit bspwm
super + shift + q
	prompt "Are you sure you would like to quit this Xsession?" "bspc quit"

# Restart bspwm
super + shift + r
	bspc wm - r

# Reload sxhkd Coniguration
super + Escape
	pkill -USR1 -x sxhkd

# Kill Node
super + c
	xdo close

# ------Layouts------
# Alternate between monacle and tiling layouts
super + f
        bspc desktop -l next

# ------Focus------
# Monitors
super + m
	bspc monitor -f next

# Desktops
super + {0-9}
	bspc desktop -f {0-9}

super + shift + {h,j,k,l}
	bspc desktop -f {west,south,north,east}

# Nodes
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# ------Movment------ 
# Monitors
super + {comma,period}
	bspc node --to-monitor {prev,next}

# Desktops
super + control + {0-9}
	bspc node -d {0-9} && bspc desktop -f {0-9}

# Nodes
super + shift + {h,j,k,l}
	bspc node -f {west,south,north,east}

# ------Size------ 
# Expand Node
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract Node
super + control + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# ------Launch Programs------ 
# Program Launcher
super + space
	rofi -show drun

# Terminal emulator
super + Return
	$TERMINAL --borderless --working-directory=$HOME

# Web browsers
super + w
	$BROWSER
