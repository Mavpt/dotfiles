#!/bin/sh
# Displays today's precipication chance (), daily low () and daily high ().

# Get weather report from wttr.in and store it locally.
weatherreport="${XDG_DATA_HOME:-$HOME/.local/share}/weatherreport"
getforecast() { curl -sf "wttr.in/" > "$weatherreport" || exit 1 ;}

# Get maximum precipitation chance, daily high and daily low
# getrain() { printf "%s" "$( sed '16q;d' $weatherreport | grep -wo "[0-9]*%" | sort -rn | sed "s/^/rain /g;1q" | tr -d "\n" )" }
showweather() { printf "%s" "$(sed '16q;d' "$weatherreport" |
	grep -wo "[0-9]*%" | sort -rn | sed "s/^/ /g;1q" | tr -d '\n')"
sed '13q;d' "$weatherreport" | grep -o "m\\([-+]\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " |  " $1 " |  " $2}' ;}

# Test if forecast has been updated today, if not update it
[ "$(stat -c %y "$weatherreport" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	getforecast

showweather
