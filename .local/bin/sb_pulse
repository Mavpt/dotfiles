#!/bin/sh
# Outputs the pulse volume level formatted to be shown in polybar
VOL=$(pamixer --get-volume)

printf "%s"
        if [ "$VOL" = "muted" ] || [ "$VOL" -eq 0 ]; then
            printf "ðŸ”‡"
        elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
            printf "ðŸ”ˆ %s%%" "$VOL"
        elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
            printf "ðŸ”‰ %s%%" "$VOL"
        else
            printf "ðŸ”Š %s%%" "$VOL"
        fi
