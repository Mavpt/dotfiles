#!/bin/sh

# This script is called on startup to remap keys.

# Increase key speed via a rate change
xset r rate 300 50

# Map Caps Lock to Super
if setxkbmap -query | grep -q us; then
        printf "Setting X keyboard layout to PT.\n"
        setxkbmap -layout pt -option caps:super
else
        printf "Setting X keyboard layout to US Programmer Dvorak.\n"
        setxkbmap -layout us -variant dvp -option caps:super
fi

# Map < to Escape
xmodmap -e "keycode 94=Escape"
