#!/bin/sh
# Bitcoin price

datahome="${XDG_DATA_HOME:-$HOME/.local/share}/bitcoin"

[ "$(stat -c %y "$datahome" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] || curl -sf https://api.coindesk.com/v1/bpi/currentprice/usd.json > "$datahome"
echo "ï…š $( grep -o 'rate":"[^"]*' $datahome | cut -d\" -f3 ) $"
